{
  "name": "lynkeer-web",
  "author": "Lynkeer",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "build": "turbo build --force",
    "dev": "turbo dev",
    "lint:root": "biome check",
    "lint": "turbo lint",
    "format": "turbo format",
    "check:fix": "turbo check:fix",
    "clean": "turbo clean && rm -rf .turbo && find apps -name .next -type d -prune -exec rm -rf {} +",
    "rebuild": "pnpm clean && TURBO_FORCE=true turbo build --force"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@lynkeer/biome-config": "workspace:*",
    "@lynkeer/typescript-config": "workspace:*",
    "husky": "^9.1.7",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}